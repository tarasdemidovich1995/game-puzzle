{
    "env": {
        "browser": true,
        "es6": true,
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": "true"
        }
    },
    "rules": {
        "semi": "off",
        "no-plusplus": "off",
        "no-console": "warn",
        "indent": 2,
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "class-methods-use-this": [
            "error",
            {
                "exceptMethods": [
                    "createRandomList",
                    "createImagesList",
                    "exit",
                    "createGameOverMenu",
                    "getSaves",
                    "getDifficultiesList",
                    "getScores",
                    "createForm",
                    "createGameMenu",
                    "createBackButton",
                    "createSaveButton",
                    "createHeadline"
                ]
            }
        ],
        "no-bitwise": [
            "error",
            {
                "allow": [
                    "|"
                ]
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ]
    },
    "extends": [
        "airbnb-base/legacy"
    ],
}